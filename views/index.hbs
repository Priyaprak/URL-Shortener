<div class="row justify-content-md-center mt-5">
    <div class="col-md-4">
        <div class="card mt-5 text-center">
            <!-- To display Error Message -->
            {{#if error}}
                <div class="alert {{messageClass}}" role="alert">
                    {{error}}
                </div>
            {{/if}}

            <div class="card-header">
                URL Shortner
            </div>
            <div class="card-body">
                <!-- InputURL FORM -->
                <form action="/" method="post">
                    <div class="form-group">
                        <input type="url"  class="form-control" name="url" id="url" placeholder="Paste the URL here..." />
                        <input type="submit" class="btn btn-primary btn-block " value="Create ShortURL" />
                    </div>
                </form>

                <!-- New ShortURL -->
                <div class="short-url mt-3">
                    {{#if short_url}}
                        <a href="{{short_url}}">{{short_url}} </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

